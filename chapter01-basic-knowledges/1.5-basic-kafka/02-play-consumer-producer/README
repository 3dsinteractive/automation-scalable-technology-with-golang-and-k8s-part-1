$ kubectl exec -it client-util -n basic-kafka -- bash
root@client-util:/#

Start Producer
$ kafkacat -P -b "kfk1" -t "mytopic"

$ message1
$ message2
$ message3

// Open another tab in terminal

$ kubectl exec -it client-util -n basic-kafka -- bash
root@client-util:/#

Start Consumer
$ kafkacat -C -b "kfk1" -t mytopic

